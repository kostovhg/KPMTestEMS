
@model KPMTestEMS.Models.ProductionViewModel
@{
    ViewBag.Title = "View";
}

<form class="form-horizontal">
    <fieldset>
        <div class="container col-lg-10 col-md-10 col-sm-12 col-xs-12">
            <div class="page-header">
                <h2>Products overview</h2>
            </div>
            <p>@ViewBag.Message</p>

            <div class="well">

                
                <div class="form-group">
                    <h3>There is @Model.Brand.Count() conditional brands of paper</h3>
                    <br/>
                    @foreach (var brand in Model.Brand)
                    {
                       <div class="panel panel-primary col-sm-12 col-md-10 col-md-offset-2">
                           <div class="panel-heading">
                               <h3 class="panel-title">@brand.FullName</h3>
                           </div>
                           <div class="panel-body">
                               @brand.Description
                           </div>
                       </div>
                    }

                </div>   
                      
                <div class="form-group">
                    <h3>All paper brands are produced with following weight:</h3>
                    <br />
                    @string.Join(" gms;  ", Model.Gmss) gms.
                </div>   


                <div class="form-group">
                    <h3>Finished products can have different widths:</h3>
                    <br />
                    @string.Join(" cm;  ", Model.Sizes) cm.
                </div>   
                </div>

        <div>
    </fieldset>
</form>
