@model KPMTestEMS.Models.ClientOptionsViewModel
    @using System.Web.Mvc.Html
    
    @using Microsoft.AspNet.Identity
@{
    var UserId = User.Identity.GetUserId();
    var UserName = User.Identity.GetUserName();
    var FullName = ViewData["FullName"];
    ViewBag.Title = FullName + " profile page";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Create orders, view orders, edit and delete orders, and manage your profile.</h4>
    <hr />

    <div class="well">
        <div class="form-group">
            @Html.ActionLink("Manage profile", "ProfileDetails", "Manage", new { @class = "btn btn-default" })
            @if (User.IsInRole("Trader") || User.IsInRole("Admin"))
            {
                @Html.ActionLink("View clients orders", "List", "Order", null, new { @class = "btn btn-default" })
                @Html.ActionLink("List products properties", "List", "Product", null, new { @class = "btn btn-default" })
            }
            else
            {
                @Html.ActionLink("View your orders", "List", "Order", null, new { @class = "btn btn-default" })
                @Html.ActionLink("Create order", "Create", "Order", null, new { @class = "btn btn-default" })
            }
        </div>
    </div>


    @*@Html.Partial("_ProfileDetails", Model.IndexVM)
    @Html.Partial("_CreateOrder", Model.newOrder)*@
</div>
